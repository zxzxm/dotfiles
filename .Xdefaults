!------------------------------------------------------------------!
! XFT                                                              !
!------------------------------------------------------------------!
Xft.dpi:                        85
Xft.autohint:                   0
Xft.antialias:                  1
Xft.rgba:                       rgb
Xft.lcdfilter:                  lcddefault
Xft.hinting:                    1
Xft.hintstyle:                  hintfull

Xcursor.theme:                  Neutral

!------------------------------------------------------------------!
! Emacs                                                            !
!------------------------------------------------------------------!

Emacs.pointerColor:             orange
!Emacs.FontBackend:             xft
!Emacs.geometry:                100x56+0+0
!Emacs.font:                    Inconsolata-13
!
!Multixterm*font:               xft:Arial:pixelsize=8

!------------------------------------------------------------------!
! Xterm                                                            !
!------------------------------------------------------------------!
!XTerm*faceName:                 Proggy Clean:size=9
!XTerm*faceName:                 DejaVu Sans Mono:size=10
XTerm*faceName:                 xft:Ubuntu Mono derivative Powerline-11
XTerm*termName:                 xterm-256color
XTerm*dynamicColors:            on
XTerm*allowSendEvents:          true
XTerm*utf8:                     2

!------------------------------------------------------------------!
! URxvt                                                            !
!------------------------------------------------------------------!
URxvt.font:                     xft:Ubuntu Mono derivative Powerline-11
URxvt.boldFont:                 xft:Ubuntu Mono derivative Powerline-11
URxvt.italicFont:               xft:Ubuntu Mono derivative Powerline-11
URxvt.bolditalicFont:           xft:Ubuntu Mono derivative Powerline-11

URxvt*letterSpace:              -1
Urxvt.depth:                    32
URxvt.colorDB:                  white
URxvt.colorIT:                  #87af5f
URxvt.colorBD:                  #d7d7d7
URxvt.colorUL:                  #87afd7
URxvt*termName:                 xterm-256color
!
URxvt.urgentOnBell:             true
URxvt*visualBell:               false
URxvt*saveLines:                32767
URxvt*scrollBar:                false
URxvt*scrollBar_right:          false
URxvt*skipScroll:               false
URxvt*jumpScroll:               true
URxvt*loginShell:               true
!URxvt*shading:                  8
!URxvt*fading:                   40
!URxvt*transparent:              true
!URxvt*inheritPixmap:            true
URxvt*secondaryScroll:          true

! Perl extensions to rxvt
URxvt.perl-ext-common:          default,keyboard-select,url-select

URxvt.keysym.M-u:               perl:url-select:select_next
URxvt.searchable-scrollback: M-s
!URxvt.keysym.M-s:               perl:keyboard-select:search
!URxvt.keysym.M-Escape:          perl:keyboard-select:activate

URxvt.url-select.launcher:      /usr/bin/firefox
URxvt.url-select.autocopy:      true
URxvt.url-select.button:        1
URxvt.url-select.underline:     true

